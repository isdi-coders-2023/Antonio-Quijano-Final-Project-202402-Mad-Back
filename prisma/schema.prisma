generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  name          String
  email         String
  password      String
  role          Role      @default(user)
  purchaseHistory       Purchase[]
  isFavorite            Album[]

}

model Purchase {
  id        String    @id  @default(cuid())
  user      User  @relation(fields: [userId], references: [id])
  userId    String
  date      DateTime @default(now())
  isPaid    Boolean
  albums    Album[]
  totalPrice  String
}


enum Role {
  user
  admin
}

model Album  {
  id                String     @id  @default(cuid())
  artist            String
  album             String
  fans              User[]
  sales             Purchase[]     
  duration          String
  cover             String
  price             Int
  genre             Genre
  recordCompany     String
  producer          String
  moreInfo          String

}

enum Genre {
  rock
  pop
  hipHop
  randB
  electronic
  metal
  jazz
  latin
}
